<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/shadow2"
    android:elevation="3dp"
    android:padding="5dp"
    android:paddingBottom="8dp">

    <Button
        android:id="@+id/gridbannerViewAll"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginStart="91dp"
        android:background="@drawable/fla1"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="View All"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="These makes you fly!"
        android:textColor="#000000"
        android:textSize="21dp"
        android:padding="3dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewallbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewallbtn" />

    <GridView
        android:id="@+id/gridproductlayout"
        android:layout_width="match_parent"
        android:layout_height="395dp"
        android:layout_marginTop="60dp"
        android:background="#F0F0F0"
        android:horizontalSpacing="1dp"
        android:numColumns="2"
        android:padding="2dp"
        android:elevation="2dp"
        android:verticalSpacing="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.631">

    </GridView>

</androidx.constraintlayout.widget.ConstraintLayout>